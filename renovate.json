{
  "extends": ["github>batect/renovate-config:default"],
  "automerge": false,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6pm on Monday"],
    "automerge": true
  },
  "packageRules": [
    {
      "datasources": ["npm"],
      "packagePatterns": [
        "^eslint$",
        "^eslint-",
        "^netlify-cli$",
        "^remark-",
        "^retext-",
        "^prettier$",
        "^typescript$",
        "^@babel/",
        "^@typescript-eslint/",
        "^@types/"
      ],
      "automerge": true
    },
    {
      "datasources": ["docker"],
      "automerge": true
    },
    {
      "packagePatterns": ["^batect/batect$"],
      "automerge": true
    },
    {
      "packagePatterns": ["^@docusaurus/"],
      "allowedVersions": "!/\\d+\\.\\d+\\.\\d+-(alpha|beta)\\.[0-9a-f]{7,}/"
    },
    {
      "matchManagers": ["batect"],
      "automerge": true
    },
    {
      "packagePatterns": ["^netlify-cli$"],
      "extends": ["schedule:daily"]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["\\.(md|mdx)$"],
      "matchStrings": [
        "uses:\\s+(?<depName>.*)@v(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ]
}
